{{#each all as |activity|}}
  {{me/activities-form/activity
    model=activity
    action=(action "activityToggled")
    selection=activeSelection
  }}
{{/each}}

<div class="form-group row justify-content-end mt-3">
  <div class="col-md-3">
    <button
      type="submit"
      class="btn btn-primary btn-lg btn-block pull-right"
      disabled={{saveDisabled}}
      {{action "save"}}
    >
    {{buttonText}}
    </button>
  </div>
</div>