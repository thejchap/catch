{{#time-table/table
  onSelectTimeSlot=(action "addOccurrence")
  model=model
  timeSlotHeight=timeSlotHeight as |day table|}}

  {{#each day.occurrences as |occurrence|}}
    {{#if hasBlock}}
      {{yield occurrence table this}}
    {{else}}
      {{time-table/table/occurrence
        model=occurrence
        timeSlotHeight=timeSlotHeight
        timeSlotDuration=timeSlotDuration
        onUpdate=(action this.attrs.onUpdateOccurrence)
        onSelect=(action this.attrs.onSelectOccurrence)
        table=table}}
    {{/if}}
  {{/each}}

  {{#if day.occurrencePreview}}
    {{time-table/table/occurrence
      class='time-table-occurrence-preview'
      model=day.occurrencePreview
      timeSlotHeight=timeSlotHeight
      timeSlotDuration=timeSlotDuration
      table=table}}
  {{/if}}

{{/time-table/table}}